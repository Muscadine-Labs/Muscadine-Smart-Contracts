{
  "name": "@muscadine-labs/contracts",
  "version": "2.0.0",
  "description": "Muscadine Labs Smart Contracts - Production-ready fee splitter",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy": "hardhat run contracts/ERC20FeeSplitter/scripts/deployImmutable.ts",
    "deploy:base": "hardhat run contracts/ERC20FeeSplitter/scripts/deployImmutable.ts --network base",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'contracts/**/test/**/*.ts' 'contracts/**/scripts/**/*.ts'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'contracts/**/test/**/*.ts' 'contracts/**/scripts/**/*.ts'"
  },
  "keywords": ["ethereum", "solidity", "fee-splitter", "payment-splitter"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.10.0",
    "hardhat": "^2.22.10",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.11",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.0"
  }
}

